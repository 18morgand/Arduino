int pos0 = 60;
int rotationAngle = 170;
int delayTime = 10;
#include <Servo.h>
Servo servo1;
Servo servo2;

void setup() {
  servo1.attach(5);
  servo2.attach(7);
  servo1.write(pos0);
  servo2.write(pos0);
}

void loop() { 
  for (int pos = pos0; pos <= rotationAngle; pos++) { // goes from 0 degrees to 180 degrees
    // in steps of 1 degree
    servo1.write(pos);              // tell servo to go to position in variable 'pos'
    servo2.write(rotationAngle-pos);              // tell servo to go to position in variable 'pos'
    delay(delayTime); // waits 15ms for the servo to reach the position
  }
  for (int pos = rotationAngle; pos >= pos0; pos--) { // goes from 180 degrees to 0 degrees
    servo1.write(pos);              // tell servo to go to position in variable 'pos'
    servo2.write(abs(rotationAngle-pos);              // tell servo to go to position in variable 'pos'
    delay(delayTime); // waits 15ms for the servo to reach the position
  }


  
}
